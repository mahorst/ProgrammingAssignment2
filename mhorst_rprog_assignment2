# Write the following functions:
# 1. makeCacheMatrix: This function creates a special "matrix" object that can cache its inverse.
# 2. cacheSolve: This function computes the inverse of the special "matrix" returned by makeCacheMatrix
# above. If the inverse has already been calculated (and the matrix has not changed), then the
# cachesolve should retrieve the inverse from the cache.

# Set up a matrix and do inversion to test
testmatrix = rbind(c(4, 3), c(3, 2)) 
testmatrix
solve(testmatrix)

# makeCacheMatrix function
makeCacheMatrix <- function(x = matrix()) {
        m <- NULL
        set <- function(y) {
                x <<- y
                m <<- NULL
        }
        get <- function() x
        setinvmat <- function(invmat) m <<- invmat
        getinvmat <- function() m
        list(set = set, get = get,
             setinvmat = setinvmat,
             getinvmat = getinvmat)
}

#cacheSolve function
cacheSolve <- function(x, ...) {
        m <- x$getinvmat()
        if(!is.null(m)) {
                message("getting cached data")
                return(m)
        }
        data <- x$get()
        m <- solve(data, ...)
        x$setinvmat(m)
        m
}

# Calling functions
tm <- makeCacheMatrix(testmatrix)
cacheSolve(tm)
